<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
        xmlns="http://www.springframework.org/schema/beans"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://dubbo.apache.org/schema/dubbo
        http://dubbo.apache.org/schema/dubbo/dubbo.xsd"
>

    <dubbo:application name="bitalarm-node">
        <dubbo:parameter key="qos.enable" value="false"/>
    </dubbo:application>

    <!-- zookeeper注册中心 -->
    <dubbo:registry address="${dubbo.registry.zookeeper.address}" timeout="${dubbo.registry.zookeeper.timeout}"/>

    <!-- dubbo协议 -->
    <dubbo:protocol name="dubbo" port="${dubbo.protocol.dubbo.port}" host="${dubbo.protocol.dubbo.host}"
                    dispatcher="message" threadpool="fixed" threads="100"/>

    <!-- 向注册中心注册暴露服务地址,注册服务 -->
    <dubbo:service
            interface="com.dwarfeng.bitalarm.stack.service.AlarmSettingMaintainService"
            ref="alarmSettingMaintainServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.bitalarm.stack.service.CurrentAlarmMaintainService"
            ref="currentAlarmMaintainServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.bitalarm.stack.service.AlarmInfoMaintainService"
            ref="alarmInfoMaintainServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.bitalarm.stack.service.AlarmHistoryMaintainService"
            ref="alarmHistoryMaintainServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.bitalarm.stack.service.EnabledAlarmSettingLookupService"
            ref="enabledAlarmSettingLookupServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.bitalarm.stack.service.AlarmService"
            ref="alarmServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.bitalarm.stack.service.AlarmTypeIndicatorMaintainService"
            ref="alarmTypeIndicatorMaintainServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.bitalarm.stack.service.PointMaintainService"
            ref="pointMaintainServiceImpl"
            group="${dubbo.provider.group}"
    />

    <!-- 向注册中心注册暴露服务地址,注册消费者服务 -->
    <dubbo:reference
            id="longIdService"
            interface="com.dwarfeng.sfds.stack.service.LongIdService"
            group="${dubbo.consumer.snowflake.group}"
    />
</beans>

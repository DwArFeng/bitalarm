<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>release</id>

    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>org.codehaus.groovy:groovy-all</exclude>
            </excludes>
            <fileMode>0755</fileMode>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <outputDirectory>conf/dubbo</outputDirectory>
            <directory>src/main/resources/dubbo</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/database</outputDirectory>
            <directory>src/main/resources/database</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/redis</outputDirectory>
            <directory>src/main/resources/redis</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/bitalarm</outputDirectory>
            <directory>src/main/resources/bitalarm</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>opt</outputDirectory>
            <directory>src/main/resources/opt</directory>
            <includes>
                <include>*.xml</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>libext</outputDirectory>
            <directory>src/main/resources/libext</directory>
            <includes>
                <include>README.md</include>
                <include>*.xml</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>optext</outputDirectory>
            <directory>src/main/resources/optext</directory>
            <includes>
                <include>README.md</include>
                <include>*.xml</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>../../README.md</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>../../CHANGELOG.md</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>../../LICENSE</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>lib</outputDirectory>
            <source>${project.build.directory}/${project.name}-${project.version}.jar</source>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <outputDirectory>bin</outputDirectory>
            <source>src/assembly/bitalarm-start.sh</source>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <outputDirectory>bin</outputDirectory>
            <source>src/assembly/bitalarm-stop.sh</source>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <outputDirectory>bin</outputDirectory>
            <source>src/assembly/bitalarm-start.bat</source>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
            <lineEnding>dos</lineEnding>
        </file>
    </files>
</assembly>
